<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yhx.mapper.UserMapper">
	<select id="getUser" parameterType="int" resultMap="userResultMap">
		select * from users where id=#{id}
	</select>
	<!-- CRUD操作 -->
	<insert id="insert" parameterType="Map">
		insert into users(name,age)
		values(#{name},#{age})
	</insert>
	<update id="update" parameterType="Map">
		update users set
		name=#{name},age=#{age} where name=#{name}
	</update>
	<delete id="delete" parameterType="int">
		delete from users where
		id=#{id}
	</delete>
	<select id="findUser" parameterType="java.lang.String"
		resultMap="userResultMap">
		select * from users where name LIKE '%${value}%'
	</select>
	<select id="findAllUser" resultMap="userResultMap">
		select * from users
	</select>
	<select id="getUserHasMap" parameterType="Map" resultMap="userResultMap">
		select id as Id,name,age from users where name LIKE '%${name}%'
	</select>

	<!-- resultmap输出映射 -->
	<select id="getUserMap" parameterType="java.lang.String"
		resultMap="userResultMap">
		select id as Id,name,age from users where name LIKE '%${value}%'
	</select>
	<!-- resultType查询出列明和属性名必须一直， resultMap则可以对改变的列明进行map映射 -->
	<resultMap type="com.yhx.po.User" id="userResultMap">
		<id column="Id" property="id" />
		<result column="name" property="name" />
		<result column="age" property="age" />
	</resultMap>
</mapper>